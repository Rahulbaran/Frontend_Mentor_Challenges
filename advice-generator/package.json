{
  "name": "advice-generator",
  "version": "1.0.0",
  "description": "advice-app is a junior level challenge by frontendmentor which is using an advice generator api for generating random advice",
  "keywords": [
    "advice-app",
    "advice-app challenge",
    "advice-app by frontendmentor",
    "frontendmentor challenge",
    "api based advice app"
  ],
  "scripts": {
    "build:css": "postcss src/css/style.css --dir dist/css",
    "watch:css": "postcss src/css/style.css --dir dist/css -w",
    "start": "browser-sync start -s --port 5000 -w"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none",
    "singleQuote": false,
    "semi": true,
    "endOfLine": "auto",
    "useTabs": false
  },
  "browserslist": {
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ],
    "production": [
      ">0.25%",
      "not dead",
      "not op_mini all",
      "not IE 11"
    ]
  },
  "author": "Rahul Kumar",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "cssnano": "^5.1.14",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^7.8.3"
  }
}
